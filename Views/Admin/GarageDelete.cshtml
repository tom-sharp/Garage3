@model Garage
<partial name="_GaragesMenu" />

<h3>Are you sure you want to delete this garage?</h3>
<div>
	<dl class="row">
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
		<dd class="col-sm-10">@Model.Name</dd>
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Size)</dt>
		<dd class="col-sm-10">@Model.Size</dd>
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.SlotSize)</dt>
		<dd class="col-sm-10">@Model.SlotSize</dd>
	</dl>

	<form asp-action="GarageDeleteConfirmed" method="post">
		<input type="hidden" asp-for=@Model.Id />
		<input type="submit" value="Delete" class="btn btn-danger" />
	</form>
</div>
